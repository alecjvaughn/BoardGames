        </space>
        <space sequence="2" x="8" y="0" type="chest" rule="draw">Community Chest</space>
        <space sequence="3" x="7" y="0" type="lot">Baltic Avenue
          <info set="brown" purchase="60" improve="50" rent="[4,20,60,180,320,450]"></info>
        </space>
        <space sequence="4" x="6" y="0" type="tax">Income Tax
          <rule><if>equity&lt;2000<pay>200</pay><else><pay>.1*equity</pay></else></if></rule>
        </space>
        <space sequence="5" x="5" y="0" type="rr" group="property">Reading Railroad</space>
        <space sequence="6" x="4" y="0" type="lot" group="property">Oriental Avenue
