          <info set="orange" purchase="200" improve="100" rent="[16,80,220,600,800,1000]"></info>
        </space>
        <space sequence="20" x="0" y="10" type="special">Free Parking</space>
        <space sequence="21" x="1" y="10" type="lot" group="property">Kentucky Avenue
          <info set="red" purchase="220" improve="150" rent="[18,90,250,700,875,1050]"></info>
        </space>
        <space sequence="22" x="2" y="10" type="chance" rule="draw">Chance</space>
        <space sequence="23" x="3" y="10" type="lot" group="property">Indiana Avenue
          <info set="red" purchase="220" improve="150" rent="[18,90,250,700,875,1050]"></info>
        </space>
