        <space sequence="34" x="10" y="6" type="lot" group="property">Pennsylvania Avenue
          <info set="green" purchase="320" improve="200" rent="[28,150,450,1000,1200,1400]"></info>
        </space>
        <space sequence="35" x="10" y="5" type="rr" group="property">Short Line</space>
        <space sequence="36" x="10" y="4" type="chance" rule="draw">Chance</space>
